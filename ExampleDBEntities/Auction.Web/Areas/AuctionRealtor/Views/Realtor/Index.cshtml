@model List<Auction.Model.Auction>
@{
    ViewBag.Title = "Index";
}



<div class="row">
    <h2>Auctions</h2>
    @foreach (var a in Model)
    {
        <div class="col-md-4 bordered">
            <h2 class="hdr">@a.Name</h2>
            <img src="@a.Product.ImageUrl" class="img" />
            <p>
                <a class="btn btn-default btnm" href="http://go.microsoft.com/fwlink/?LinkId=301865">Learn more &raquo;</a>
            </p>
        </div>
    }
</div>