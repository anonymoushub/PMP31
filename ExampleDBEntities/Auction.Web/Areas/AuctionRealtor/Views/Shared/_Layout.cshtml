@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.5.0/css/font-awesome.min.css">

<div class="row">
    <div class="col-lg-3 col-md-3 col-sm-4">
        <div class="row">
            <h2>@User.Identity.Name</h2> <span></span>
            <div class="list-group w-95p">
                    @Html.ActionLink("All auctions", "Index",
                                        new { area = "AuctionRealtor", controller = "Realtor" },
                                        new { @class = "list-group-item" })

                    @Html.ActionLink("Approved", "Approved",
                                        new { area = "AuctionRealtor", controller = "Realtor" },
                                        new { @class = "list-group-item" })

                    @Html.ActionLink("Approved by me", "ApprovedByMe",
                                        new { area = "AuctionRealtor", controller = "Realtor" },
                                        new { @class = "list-group-item" })
            </div>
        </div>
    </div>
    <div class="col-lg-9 col-md-9 col-sm-8">
        @RenderBody()
    </div>
</div>
